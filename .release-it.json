{
    "git": {
        "commitMessage": "chore: ðŸ¤– release v${version}",
        "tagName": "v${version}",
        "changelog": "npx auto-changelog --stdout -l false -u -p -t changelog-template.hbs"
    },
    "github": {
        "release": true,
        "releaseName": "v${version}",
        "assets": [
            "c-cpp-compile-run-*.vsix"
        ],
        "tokenRef": "RELEASE_TOKEN"
    },
    "npm": {
        "publish": false
    },
    "hooks": {
        "after:bump": "npx auto-changelog -p",
        "before:github:release": "npx vsce package",
        "after:github:release": "npx vsce publish -p $VSCE_TOKEN"
    }
}